<% if (environment == "development") { 
	var env_set = ""
} else {
	var env_set = root
} %>

<%- partial('_templates/head', {env_root: env_set}) %>
<body>
	<%- partial('_templates/header', {env_root: env_set}) %>

	<div id="introduction" class="introduction">
		<div class="container">
			<h5 class="introduction-subtitle align-center wow bounceInLeft" data-wow-delay=".5s">Hi there, I am</h5>
			<h4 class="introduction-title align-center wow bounceInRight" data-wow-delay="1.5s">Aaron Mazade!</h4>
			<div class="introduction-title-border align-center wow fadeIn" data-wow-delay="2.5s"></div>
			<p class="lead narrow align-center wow fadeIn" data-wow-delay="3s">
				I'm a man of many titles and even more so of talents. You can call me a Front-End Developer, a web designer, a user experience aficionado, or just a stand up guy. I hail from Muskegon, MI, where I concoct my eccentric plans of wold domination.
			</p>
		</div>
		<div class="avatar wow fadeIn" data-wow-delay="3.25s"></div>
	</div> <!-- /.introduction -->

