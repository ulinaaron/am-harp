<% if (environment == "development") { 
	var env_set = ""
} else {
	var env_set = root
} %>

<%- partial('_templates/head', {env_root: env_set}) %>
<body>
	<%- partial('_templates/header', {env_root: env_set}) %>

	<div id="introduction" class="introduction">
		<div class="container">
			<div class="content">
				<h5 class="introduction-subtitle wow fadeIn tk-sorts-mill-goudy" data-wow-delay=".5s">Hello, I am</h5>
				<h4 class="introduction-title wow fadeIn tk-sorts-mill-goudy" data-wow-delay="1.5s">Aaron Mazade!</h4>
				<div class="introduction-title-border wow fadeIn" data-wow-delay="2.5s"></div>
				<p class="wow fadeIn" data-wow-delay="3s">
					I'm a man of many titles and even more so of talents. You can call me a Front-End Developer, a web designer, a user experience aficionado, or just a guy who talks a lot about Sci-Fi, bowling, and disc golf. I hail from Grandville, MI, where I concoct my eccentric plans of world domination.
				</p>
			</div> <!-- /.content -->
			<div class="media">
				<img src="assets/images/mymac.png">
			</div>
		</div> <!-- /.container -->
	</div> <!-- /.introduction -->

	<div class="talents">
